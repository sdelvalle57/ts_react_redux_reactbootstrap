{
  "name": "next8_firebase_react_redux_boilerplate",
  "version": "1.0.0",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "deploy-all": "npm run predeploy && firebase deploy",
    "dev": "npm run change-dev-env && node \"src/app/server.js\"",
    "prod": "npm run change-prod-env && node \"src/app/server.js\"",
    "predeploy": "npm run change-prod-env && npm run build-public && npm run copy-static && npm run build-funcs && npm run build-app && npm run copy-deps",
    "build-public": "cpx \"src/public/**/*.*\" \"dist/public\" -C",
    "build-funcs": "babel \"src/functions\" --out-dir \"dist/functions\" && npm run copy-func-files",
    "build-app": "next build \"src/app/\"",
    "copy-static": "cpx \"src/app/static/**/*\" \"dist/public/static/\" -C",
    "copy-func-files": "npm run copy-credentials && npm run copy-routes && npm run copy-server",
    "copy-credentials": "cpx \"src/app/credentials**/*.*\" \"dist/functions\" -C",
    "copy-routes": "cpx \"src/app/routes.js\" \"dist/functions\" -C",
    "copy-server": "cpx \"src/app/express_server.js\" \"dist/functions\" -C",
    "copy-deps": "cpx \"*{package.json,package-lock.json}\" \"dist/functions\" -C",
    "change-dev-env": "cp .env.dev .env",
    "change-prod-env": "cp .env.prod .env",
    "change-prod-env-lx": "cp .env.prod .env",
    "install-deps": "cd \"dist/functions\" && npm i"
  },
  "dependencies": {
    "@babel/runtime": "7.4.3",
    "acorn": "^6.1.1",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "connect-session-firebase": "^5.13.0",
    "firebase": "^8.2.2",
    "firebase-admin": "^9.4.2",
    "firebase-functions": "^3.13.0",
    "helmet": "^3.14.0",
    "next": "^8.1.0",
    "next-routes": "^1.4.2",
    "react": "16.8.6",
    "react-bootstrap": "^1.4.3",
    "react-dom": "16.8.6",
    "react-favicon": "0.0.14",
    "react-redux": "^7.0.2",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.2",
    "redux-promise": "^0.6.0",
    "redux-thunk": "^2.3.0",
    "request-promise": "^4.2.6",
    "session-file-store": "^1.2.0",
    "webpack": "^4.29.6"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "7.4.3",
    "@babel/core": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "@babel/runtime": "7.4.3",
    "cpx": "^1.5.0",
    "firebase-tools": "^9.2.0",
    "prettier": "1.12.1",
    "rimraf": "2.6.2",
    "semantic-ui": "^2.4.0"
  }
}
